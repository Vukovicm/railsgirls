<h1>Latest LOL Moments</h1>

<% @ideas.in_groups_of(5) do |group| %>
  <div class="row">
    <% group.compact.each do |idea| %>
      <div class="col-md-4">
        <%= link_to image_tag(idea.picture_url, width: '50%'), idea if idea.picture.present?%>
        <h4><%= link_to idea.name, idea %></h4>
        <%= idea.description %>
      </div>
    <% end %>
  </div>
<% end %>
